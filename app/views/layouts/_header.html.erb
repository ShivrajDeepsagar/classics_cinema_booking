<header>
  <nav class = "navbar navbar-default">
    <div class = "container">
      <div class = "navbar-header"><a class = "navbar-brand" href = "#">
        <%= link_to "Classics N Chill",   root_path, class:"navbar-brand"%></a>
        <button type = "button" class = "navbar-toggle" data-toggle = "collapse" data-target = ".navbar-menubuilder"><span class = "sr-only">Toggle navigation</span><span class = "icon-bar"></span><span class = "icon-bar"></span><span class = "icon-bar"></span>
        </button>
      </div>

      <div class = "collapse navbar-collapse navbar-menubuilder">
        <ul class = "nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path, class: 'active' %></li>
            <% if !logged_in? %>
              <li><%= link_to "Login",   login_path %></li>
              <li><%= link_to "Register",   signup_path %></li>
              <% else %>
                <% if current_user.try(:admin?) %>
                <li class = "dropdown">
                  <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown">
                   Admin options <b class = "caret"></b>
                  </a>
                  <ul class = "dropdown-menu">
                    <li><%= link_to "New Movie", newmovie_path %></li>
                    <li><%= link_to "Add Theater", addtheater_path %></li>
                    <li><%= link_to "Create Screening", createscreening_path %></li>
                  </ul>
                </li>
                <% end %>
                <li class = "dropdown">
                  <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown">
                    <%= (current_user.name).capitalize %> <b class = "caret"></b>
                  </a>
                  <ul class = "dropdown-menu">
                    <li><%= link_to "Bookings",   bookings_path %></li>
                    <li><%= link_to "Logout",  logout_path, method: "delete" %></li>
                  </ul>
              </li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>
