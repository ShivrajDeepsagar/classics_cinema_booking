<% provide(:title, "New Theater") %>
<h1>Add New Theater</h1>

<div class="row">

<% if @errors.any? %>
    <% @errors.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>



  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:theater, url: addtheater_path) do |f| %>

      <%= f.label :Theater_Name %>
      <%= f.text_field :theater_name, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_area :address, class: 'form-control' %>

      <%= f.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>