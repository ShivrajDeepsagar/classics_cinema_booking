<% provide(:title,"Payment") %>

<% if @payment.errors.any? %>
  <% @payment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<%= @screening_id %>

<br>

<div class = "row">
  <div class = "col-xs-12 col-md-4 col-md-offset-2">
    <ul class = "nav nav-pills nav-stacked">
      <li class = "active"><a ><span style="color:#449d44"  class="badge pull-right">&#8377;<%= @total_cost %></span> Total cost</a>
      </li>
    </ul>
    <br>
    <div class = "panel panel-default">
      <div class = "panel-heading">
        <h3 class = "panel-title">Payment Details</h3>
      </div>
      <div class = "panel-body">
        <%= form_for(:payment, url: payment_path) do |f| %>

          <div class = "form-group">
            <label for = "cardNumber">CARD NUMBER</label>
            <div class = "input-group">
              <%= f.text_field :card_number, class: 'form-control', id: 'cardNumber', placeholder: "Valid Card Number" %>
              <span class = "input-group-addon"><span class = "glyphicon glyphicon-lock"></span></span>
            </div>
          </div>

          <div class = "control-group">
            <label class = "control-label"  for = "username">CARD HOLDER'S NAME</label>
            <div class = "controls">
              <%= f.text_field :card_name, class: 'form-control', id: "cardNumber", placeholder: "Name" %>
            </div>
          </div>

          <div class = "row">
            <div class = "col-xs-7 col-md-7">
              <div class = "form-group">
                <label for = "expityMonth">EXPIRY DATE</label>
                <div class = "col-xs-6 col-lg-6 pl-ziro">
                  <%= f.text_field :exp_month, class: 'form-control', id: "expityMonth", placeholder: "MM" %>
                </div>
                <div class = "col-xs-6 col-lg-6 pl-ziro">
                  <%= f.text_field :exp_year, class: 'form-control', id: "expityYear", placeholder: "YY" %>
                </div>
              </div>
            </div>

            <div class = "col-xs-5 col-md-5 pull-right">
              <div class = "form-group">
                <label for = "cvCode">CVV2 CODE</label>
                <%= f.text_field :cvv, class: 'form-control', id: "cvCode", placeholder: "CVV" %>
              </div>
            </div>
          </div>
      </div>
    </div>
    <br/>
    <%= f.submit "pay", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>